<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="#FFC124"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/rewards" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:fontFamily="@font/poppins_semibold"
            android:lineSpacingExtra="0sp"
            android:text="Rewards"
            android:textAlignment="center"
            android:textColor="#00575C"
            android:textSize="50dp"
            app:lineHeight="0sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:fontFamily="@font/poppins_semibold"
            android:lineSpacingExtra="8sp"
            android:text="Trade in your rewards earned\nfrom visiting ShiokSpots!"
            android:textAlignment="center"
            android:textColor="#00575C"
            android:textSize="20sp"
            app:lineHeight="21sp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:baselineAligned="false"
            android:fontFamily="@font/poppins_semibold"
            android:lineSpacingExtra="0sp"
            android:text="Your Points:"
            android:textAlignment="textStart"
            android:textColor="#00575C"
            android:textSize="40dp"
            app:lineHeight="0sp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:baselineAligned="false"
            android:fontFamily="@font/poppins_semibold"
            android:lineSpacingExtra="0sp"
            android:text="50 Shiok Points"
            android:textAlignment="textStart"
            android:textColor="#0B7C7B"
            android:textSize="40dp"
            app:lineHeight="0sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom">
            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:onClick="mainpage"
                app:srcCompat="@drawable/back" />
        </RelativeLayout>
    </LinearLayout>
    </TableLayout>
    </ScrollView>

</LinearLayout>
